<div class="reset-password-wrap auth-info-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-white rounded-3 p-4 reset-password-info">
                    <h3 class="text-center">Reset Account Password</h3>
                    <div class="form mt-3">
                        {% form 'reset_customer_password' %}
                            {{ form.errors | default_errors }}
                            <div class="form-group mb-3">
                                <label for="password">Password</label>
                                <input type="password" name="customer[password]" autocomplete="password" id="password" class="form-control" placeholder="Enter password">
                            </div>
                            <div class="form-group mb-3">
                                <label for="confirmPass">Confirm Password</label>
                                <input type="password" name="customer[password_confirmation]" autocomplete="password" id="confirmPass" class="form-control" placeholder="Retype your password">
                            </div>
                            <button type="submit" class="btn w-100 d-block mt-3">Reset</button>
                        {% endform %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

