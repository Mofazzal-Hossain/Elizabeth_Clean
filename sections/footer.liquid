<section class="footer-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="footer-left">
                    <a href="{{ routes.root_url }}" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none site-title">
                        {% if section.settings.site_logo %}
                            <img src="{{ section.settings.site_logo | img_url: 'medium' }}" alt="{{ section.settings.site_logo.alt }}">
                        {% elsif section.settings.site_title %}
                            <h1 class="mb-0">{{ section.settings.site_title}}</h1>
                        {% else %}
                            <h1 class="mb-0">{{ shop.name }}</h1>
                        {% endif %}
                    </a>
                    {% if section.settings.footer_short_description !=blank %}
                        <p class="mt-3">{{ section.settings.footer_short_description | truncatewords: 18 }}</p>
                    {% endif %}
                    {% form 'customer' %}
                        <input type="email" name="contact[email]" class="form-control mt-4" placeholder="Enter your email" required>
                        <button type="submit" class="btn">Submit</button>
                    {% endform %}
                </div>
            </div>
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'footer_menu' %}
                        <div class="col-md-2">
                            <div class="ic-footer-col">
                                {% if block.settings.footer_menu_title !=blank %}
                                    <h3>{{ block.settings.footer_menu_title }}</h3>
                                {% endif %}
                                {% if block.settings.footer_menu_item !=blank %}
                                    <div class="menu-about-company-container">
                                        <ul id="menu-about-company" class="menu">
                                            {% for menu in block.settings.footer_menu_item.links %}
                                                <li id="menu-item-1557" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1557"><a href="{{ menu.url }}">{{ menu.title }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>	
                                {% elsif block.settings.payment_method_image !=blank %}
                                    <img src="{{ block.settings.payment_method_image | img_url: '1920x' }}" alt="{{ block.settings.payment_method_image.alt }}">
                                {% endif %}					
                            </div>
                        </div>
                    {% else %}
                {% endcase %}
            {% endfor %}

        </div>
    </div>
</section>

{%  schema  %}  
    {
        "name": "Footer",
        "settings": [
            {
                "type": "image_picker",
                "id": "site_logo",
                "label": "Select site logo"
            },
            {
                "type": "text",
                "id": "site_title",
                "label": "Add site title"
            },
            {
                "type": "textarea",
                "id": "footer_short_description",
                "label": "Add short description on the footer"
            }
        ],
        "blocks": [
            {
                "name": "Footer Menu",
                "type": "footer_menu",
                "settings": [
                    {
                        "type": "text",
                        "id": "footer_menu_title",
                        "label": "Add menu title"
                    },
                    {
                        "type": "link_list",
                        "id": "footer_menu_item",
                        "label": "select menu"
                    },
                    {
                        "type": "image_picker",
                        "id": "payment_method_image",
                        "label": "Payment method image"
                    }
                ]
            }
        ]
    }
{% endschema %}