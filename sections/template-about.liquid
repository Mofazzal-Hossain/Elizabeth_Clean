<section class="about-wrapper">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="image">
                    {% if section.settings.about_image %}
                        <img src="{{ section.settings.about_image | img_url: '1920x' }}" alt="{{ section.settings.about_image.alt }}">
                    {% else %}
                        {{ "lifestyle-2" | placeholder_svg_tag: "w-100 h-80"}}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="content">
                    {% if section.settings.about_title %}
                        <h3>{{ section.settings.about_title }}</h3> 
                    {% endif %}
                    {% if section.settings.about_description %}
                        <p>{{ section.settings.about_description }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Templete About",
        "settings": [
            {
                "type": "image_picker",
                "id": "about_image",
                "label": "Select about image"
            },
            {
                "type": "text",
                "id": "about_title",
                "label": "Add a title"
            },
            {
                "type": "richtext",
                "id": "about_description",
                "label": "Add a description"
            }
        ]
    }
{% endschema %}
